#!/bin/sh
 
#
# chkconfig: 35 99 99
# description: /home/ec2-user/wordlist/rest.py
#
 
. /etc/rc.d/init.d/functions
 
USER="ec2-user"
 
APP_DIR="/home/$USER/wordlist"
DAEMON="$APP_DIR/rest.py"
 
#LOG_FILE="$APP_DIR/rest.log"
LOG_FILE="/dev/null"
 
LOCK_FILE="/var/lock/subsys/rest"
 
do_start()
{
        if [ ! -f "$LOCK_FILE" ] ; then
                echo -n $"Starting $SERVER: "
                runuser -l "$USER" -c "$DAEMON >> $LOG_FILE 2>&1 &" && echo_success || echo_failure
                RETVAL=$?
                echo
                [ $RETVAL -eq 0 ] && touch $LOCK_FILE
        else
                echo "$SERVER is locked."
                RETVAL=1
        fi
}
do_stop()
{
        echo -n $"Stopping $SERVER: "
        pid=`ps -aefw | grep "$DAEMON" | grep -v " grep " | awk '{print $2}'`
        kill -9 $pid > /dev/null 2>&1 && echo_success || echo_failure
        RETVAL=$?
        echo
        [ $RETVAL -eq 0 ] && rm -f $LOCK_FILE
}
 
case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        restart)
                do_stop
                do_start
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                RETVAL=1
esac
 
exit $RETVAL
